---

<script>
  const infoSection = document.querySelectorAll('#info-section');
  const acordions = document.querySelectorAll('#acordion-content');

  infoSection.forEach((infoSection, i) => {
    infoSection?.addEventListener('click', () => {
    const acordion = acordions[i]
    acordion?.classList.toggle('inactive');
    console.log('LLegue');
    
  })
  })

</script>

<div id="info-section" class="text-black dark:text-white border-b pb-8 flex flex-col gap-8 mt-12 cursor-pointer  card-info-container">
  <div class="flex flex-col sm:flex-row justify-between xl:items-center">
    <h2 class="text-xl xl:text-4xl font-semibold ease-in duration-300 opacity-70">
      {titulo}
    </h2>
    <p class="text-lg mt-4 sm:m-1 opacity-50">{fechaInicio} - {fechaFin}</p>
  </div>
  <p class="text-lg opacity-50">{entidad}</p>
  <div id="acordion-content" class="flex flex-col xl:flex-row justify-between overflow-hidden transition-all duration-300 inactive">
    <div>
      <h2 class="text-2xl opacity-70">Responsabilidades</h2>
    {
      respon?.map((item:string)=> {
        return (
          <div class="opacity-50">
            <ul class="list-disc">
              <li>{item}</li>
            </ul>
          </div>
        )
      })
    }
    </div>
    <div>
      <h2 class="text-2xl opacity-70">Logros</h2>
    {
      logros?.map((item:string)=> {
        return (
          <div class="opacity-50">
            <ul class="list-disc">
              <li>{item}</li>
            </ul>
          </div>
        )
      })
    }
    </div>
  </div>
</div>
<style>
  .text-white:hover h2 {
  color: #FFFFFF; /* Cambia a tu color deseado */
  opacity: 1; /* Opcional, si quieres que sea completamente visible */
}



.inactive {
  display: none;
}

</style>