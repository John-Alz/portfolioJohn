---
const { image, title, tag } = Astro.props;
---

<div
  class="h-[280px] xl:w-[330px] xl:h-[300px] flex flex-col justify-end bg-blackAbout rounded-2xl"
>
  <div class="flex flex-col justify-center items-center">
    <img
      class="w-[80px] xl:w-[114px] rounded-xl pb-10"
      src={image}
      alt={title}
    />
  </div>

  <div class="flex justify-between p-4">
    <h2 class="text-xl font-semibold">{title}</h2>
    <p class="text-grayv2 border border-grayv2 rounded-full py-2 px-4 text-xs">
      {tag}
    </p>
  </div>
</div>
